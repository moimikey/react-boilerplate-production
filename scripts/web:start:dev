--devtool eval \
\
--colors \
--compress \
--debug \
--history-api-fallback \
--hot \
--hot-only \
--inline \
--labeled-modules \
--progress \
--target web \
--watch \
--watch-content-base \
--verbose \
\
--output-public-path / \
--output-pathinfo \
"
